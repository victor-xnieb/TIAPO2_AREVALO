<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GameController">
   <children>
      <ImageView fitHeight="1000.0" fitWidth="1300.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/fondos/fondo_pantalla_juego.png" />
         </image>
      </ImageView>
      <BorderPane>
      
          <top>
              <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: rgba(0,0,0,0.4);">
                  <children>
                      <ImageView fx:id="heart1" fitHeight="24" fitWidth="24" preserveRatio="true" />
                      <ImageView fx:id="heart2" fitHeight="24" fitWidth="24" preserveRatio="true" />
                      <ImageView fx:id="heart3" fitHeight="24" fitWidth="24" preserveRatio="true" />
                      <Label fx:id="weaponLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Arma: RIFLE" />
                      <Label fx:id="ammoLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Munición: 0" />
                      <Label fx:id="foodLabel" text="" />
                      <Label fx:id="medLabel" text="" />
                      <Label fx:id="messageLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="" />
      
                      <Button fx:id="achievementsButton" onAction="#onShowAchievements" text="Logros" />
      
                      <Button onAction="#handleBackToMenu" text="Volver al menú" />
                  </children>
              </HBox>
          </top>
      
          <center>
              <!-- Tamaño del canvas: lo ajustaremos al mapa en código -->
              <Canvas fx:id="gameCanvas" height="615" width="700" />
          </center>
         <left>

   </left>
      
      </BorderPane>
   </children>
</StackPane>
