<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AchievementsController">

    <top>
        <Label text="Árbol de logros"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 20px; -fx-padding: 10;" />
    </top>

    <center>
        <TreeView fx:id="achievementsTree"
                  prefWidth="400"
                  prefHeight="400" />
    </center>

    <right>
        <VBox spacing="8" style="-fx-padding: 10;">
            <Label text="Detalle del logro:"
                   style="-fx-font-weight: bold;" />
            <Label fx:id="nameLabel" text="Nombre" wrapText="true" />
            <Label fx:id="descLabel" text="Descripción" wrapText="true" />
            <Label fx:id="stateLabel" text="Estado" wrapText="true" />
        </VBox>
    </right>

    <bottom>
        <Button text="Volver"
                BorderPane.alignment="CENTER"
                onAction="#onBack"
                style="-fx-padding: 8 16 8 16; -fx-font-size: 14px;" />
    </bottom>

</BorderPane>
